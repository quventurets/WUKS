 <div class="container">
  <div class="row">
    <% @comps.each do |comps| %>
      <div class="col-md-3 col-sm-6" style="margin-bottom: 15px;">
        <%= link_to career_show_path(name:comps.name) do %>
          <div class="card" id="career" style="height: 90%; margin-bottom: 0px;">
            <div class="listImg">
              <img src=<%= asset_path("img/comp/#{comps.name}_logo.jpg") %> alt="">
            </div>
            <div class="listContent">
              <div class="listTitle">
                <%= comps.name %>
              </div>
              <div class="contentDetail">
              </div>
              <div class="tagArea">
                <span class="badge badge-pill badge-rose"><%= comps.place %></span>
                <% 5.times do |i| %>
                  <% if comps.area[i] == 1 %>
                    <span class="badge badge-pill badge-success"><%= @areas[i] %></span>
                  <% end %>
                <% end %>
                <span class="badge badge-pill badge-info"><%= comps.scale %></span>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>   

  </div>
 </div>