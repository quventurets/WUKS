<% content_for :title do %>
<%= @comp.name %> | 就職
<% end %>

<section class="py-5 bg-image-full" style="background-image: url('/assets/img/comp/<%= @comp.name %>.jpg');">
  <div style="height: 150px;">
    <div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <div class="brand">
            <h2 class="forbadge">
              <span class="badge badge-pill badge-rose"><%= @comp.place %></span>
              <span class="badge badge-pill badge-success"><%= @comp.area %></span>
              <span class="badge badge-pill badge-info"><%= @comp.scale %></span>
              <h2><%= @comp.name %></h2>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="article-space">
<h1 class ="heading">企業情報</h1>
  <div class="article-heading">なにをやっているのか</div>
    <%= simple_format(@comp.what) %>
  <div class="article-heading">なぜやっているのか</div>
    <%= simple_format(@comp.why) %>
  <div class="article-heading">どうやっているのか</div>
    <%= simple_format(@comp.how) %>
  <div class="article-heading">その他の情報</div>
    <div class="other-info">
      <%= @comp.name %><br>
      <i class="material-icons">flag</i><%= @comp.founded_year %>/<%= @comp.founded_month %>に設立<br>
      <i class="material-icons">people</i><%= @comp.employees %>人のメンバー<br>
      <i class="material-icons">place</i>
      <a href="javascript:;" 
      onclick="window.open('http://maps.google.co.jp/maps?q='+encodeURI('<%= @comp.address %>'));
      return false;"><u><%= @comp.address %></u></a><br>
    </div>
</div>