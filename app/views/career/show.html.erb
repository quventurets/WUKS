<% content_for :title do %>
<%= @comp.name %> | 就職
<% end %>

<section class="py-5 bg-image-full" style="background-image: url(<%= asset_path("img/comp/#{@comp.name}.jpg") %>);">
  <div style="height: 150px;">
  <div class="pt-5">
  </div>
    <div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <div class="brand">
            <h2 class="forbadge">
              <h1><%= @comp.name %></h1>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class ="container main-content">
  <div class="pt-5">
    <div class ="row">
      <div class="container">
        <h2 class="heading"> 企業情報</h2>
          <div class="card-header card-header-primary">
            <h3 class="sub">ミッション</h3>
              <%= simple_format(@comp.mission, {}, wrapper_tag: "div class='article'") %>
            <h3 class="sub">なにをやっているのか</h3>
              <%= simple_format(@comp.what, {}, wrapper_tag: "div class='article'") %>
            <h3 class="sub">職種</h3>
              <%= simple_format(@comp.occupation, {}, wrapper_tag: "div class='article'") %>
            <h3 class="sub">求める人材</h3>
              <%= simple_format(@comp.want, {}, wrapper_tag: "div class='article'") %>
            <h3 class="sub">高専生・高専卒に一言</h3>
              <%= simple_format(@comp.comment, {}, wrapper_tag: "div class='article'") %>
            <h3 class="sub">その他の情報</h3>
              <div class="article">
                <%= @comp.name %><br>
                <i class="material-icons">flag</i> <%= @comp.founded_year %>/<%= @comp.founded_month %> に設立<br>
                <i class="material-icons">people</i> <%= @comp.employees %>人のメンバー<br>
                <i class="material-icons">place</i>
                <a href="javascript:;" 
                onclick="window.open('http://maps.google.co.jp/maps?q='+encodeURI(<%= @comp.address %>));
                return false;"><u><%= @comp.address %></u></a><br>
              </div>
          </div>
      </div>
    </div>
  </div>
</div>