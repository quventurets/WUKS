<% content_for :title do %>
<%= @comp.name %> | 就職
<% end %>

<section class="py-5 bg-image-full" style="background-image: url('/assets/img/comp/<%= @comp.name %>.jpg');">
  <div style="height: 150px;">
    <div class="container">
      <div class="row">
        <div class="col-md-8 ml-auto mr-auto">
          <div class="brand">
            <h2 class="forbadge">
              <h1><%= @comp.name %></h1>
            </h2>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div class ="container main-content">
  <div class="pt-5">
    <div class ="row">
      <div class="container">
        <h2 class="heading"> 企業情報</h2>
        <div class="card-header card-header-primary">
          <div class ="col-md-8 content-area">
          <div class="card-body">
            <div class="tab-content pl-1">
              <h4 class="sub">なにをやっているのか</h4>
                <%= simple_format(@comp.what) %>
              <h4 class="sub">なぜやっているのか</h4>
                <%= simple_format(@comp.why) %>
              <h4 class="sub">どうやっているのか</h4>
                <%= simple_format(@comp.how) %>
              <h4 class="sub">その他の情報</h4>
                <div class="other-info">
                  <%= @comp.name %><br>
                  <i class="material-icons">flag</i><%= @comp.founded_year %>/<%= @comp.founded_month %>に設立<br>
                  <i class="material-icons">people</i><%= @comp.employees %>人のメンバー<br>
                  <i class="material-icons">place</i>
                  <a href="javascript:;" 
                  onclick="window.open('http://maps.google.co.jp/maps?q='+encodeURI('<%= @comp.address %>'));
                  return false;"><u><%= @comp.address %></u></a><br>
                </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>