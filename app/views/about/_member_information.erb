<div class="card member-card">
  <div class="card-body hidden-small">
    <div class="container">
      <div class="row">
        <div class="col-7 member-content">
          <div>
            <p class="h2"><%= name %></p>
            <p class="h4"><span>出身:</span><span><%= kosen %></span> <span><%= kosen_department %></span></p>
            <p class="h4"><span>所属:</span><span><%= univ %></span> <span><%= faculty %></span> <span><%= department %></span></p>
          </div>
        </div>
        <div class="col-5">
          <div class="member-img">
            <img src="<%= asset_path('img/about/member/' + img + '.jpg') %>" alt="<%= name %>">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body hidden-big">
    <p class="h3" style="margin-top: 0; margin-bottom: 0;"><%= name %></p>
    <div class="container">
      <div class="row">
        <div class="col-5 about-content">
          <p style="margin: 0;">出身</p>
          <p><span><%= kosen %></span> <span><%= kosen_department %></span></p>
          <p style="margin: 0;">所属</p>
          <p><span><%= univ %></span> <span><%= faculty %></span> <span><%= department %></span></p>
        </div>
        <div class="col-7">
          <div class="member-img">
            <img src="<%= asset_path('img/about/member/' + img + '.jpg') %>" alt="<%= name %>">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>